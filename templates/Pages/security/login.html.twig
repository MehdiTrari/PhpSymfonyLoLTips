{% extends 'base.html.twig' %}

{% block title %}LoLTips - Connexion{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Connexion</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('security.logout') }}">Déconnexion</a>
            </div>
        {% endif %}

        <form action="{{ path('security.login') }}" method="post">
             <div class="form-group">
      <label for="username" class="form-label mt-4">Adresse Email</label>
      <input type="email" class="form-control" id="username" aria-describedby="emailHelp" placeholder="exemple@LoLTips.com" value="{{ last_username }}"
      name="_username">
      <small id="emailHelp" class="form-text text-muted">Ces informations resteront confidentielles.</small>
    </div>
    <div class="form-group">
      <label for="password" class="form-label mt-4">Mot de passe</label>
      <input type="password" class="form-control" id="password" placeholder="********" name="_password">
    </div>
            <button type="submit" class="btn btn-primary mt-4">Se connecter</button>

{% endblock %}
